{
  "name": "simka.dev",
  "scripts": {
    "build": "conc \"bun run build:*\"",
    "build:11ty": "bunx @11ty/eleventy",
    "build:css": "tailwindcss -i ./content/css/tailwind.css -o ./_site/css/tailwind.css --minify",
    "format": "bunx prettier --write .",
    "start": "conc \"bun run start:*\"",
    "start:11ty": "bunx @11ty/eleventy --serve --quiet",
    "start:css": "tailwindcss -i ./content/css/tailwind.css -o ./_site/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6"
  }
}
